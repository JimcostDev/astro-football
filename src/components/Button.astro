---
    const { bgColor, borderColor, ...rest } = Astro.props;
---
  <a
    {...rest}
    target=""
    rel="noopener noreferrer"
    class={`text-sm inline-flex items-center justify-center gap-2 px-4 py-2
    text-tertiary bg-transparent border rounded-lg shadow-md 
    hover:shadow-xl ease-in-out duration-500 cursor-pointer mb-2 
    ${bgColor} ${borderColor} `}
  >
    <slot />
  </a>