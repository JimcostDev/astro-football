import SectionContainer from '../../components/SectionContainer.astro';
import DeleteTeamReact from '../../components/DeleteTeam.jsx';

// Captura el 'id' desde los parámetros de la ruta
const { id } = Astro.params; // Astro.params obtiene los segmentos dinámicos de la ruta
console.log('teamId en Astro:', id);
